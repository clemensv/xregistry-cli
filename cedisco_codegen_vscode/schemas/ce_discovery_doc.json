        "allOf": [
          {
            "$ref": "#/components/schemas/metadataPropertyBase"
          }
        ]
      },
      "metadataPropertyDuration": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "format": "duration"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/metadataPropertyBase"
          }
        ]
      },
      "metadataPropertyUriTemplate": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "format": "uri-template"
          }
