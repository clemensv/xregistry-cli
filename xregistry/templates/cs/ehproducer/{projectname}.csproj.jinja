{%- set uses_protobuf = uses_protobuf | default(true) -%}
{%- set uses_avro = uses_avro or (root.schemagroups | exists( "format", "avro" )) or (root | exists( "schemaformat", "avro" )) -%}
{%- set uses_amqp_message = (root | exists( "binding", "amqp" )) %}
{%- set uses_amqp_endpoint = (root | exists("protocol", "amqp" )) %}

<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ProjectName>{{project_name | pascal }}</ProjectName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  {%- if uses_protobuf %}
  <ItemGroup>
    <Protobuf Include="**\*.proto" GrpcServices="None" />
  </ItemGroup>
  {%- endif %}
  <ItemGroup>
    <PackageReference Include="CloudNative.CloudEvents" Version="2.5.1" />
    <PackageReference Include="CloudNative.CloudEvents.SystemTextJson" Version="2.5.1" />
    <PackageReference Include="CloudNative.CloudEvents.Avro" Version="2.5.1" />
    <PackageReference Include="CloudNative.CloudEvents.Protobuf" Version="2.5.1" />
    <PackageReference Include="Azure.Messaging.EventHubs" Version="5.11.1" />
    {%- if uses_protobuf %}
    <PackageReference Include="Google.Protobuf" Version="3.26.1" />
    <PackageReference Include="Grpc.Tools" Version="2.50.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    {%- endif %}
    <PackageReference Include="System.Memory.Data" Version="8.0.0"></PackageReference>
    {%- if uses_avro %}
    <PackageReference Include="Apache.Avro" Version="1.11.3" />
    {%- endif %}
  </ItemGroup>
  
</Project>