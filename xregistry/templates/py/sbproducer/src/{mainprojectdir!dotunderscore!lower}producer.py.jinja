    @classmethod
    def from_connection_string(cls, connection_string: str, queue_or_topic_name: str, content_mode:typing.Literal['structured','binary']= 'structured') -> '{{ class_name }}':
        """
        Creates a producer from a connection string.

        Args:
            connection_string (str): The Service Bus connection string
            queue_or_topic_name (str): The Service Bus queue or topic name
            content_mode (typing.Literal['structured','binary']): The content mode to use for sending events

        Returns:
            {{ class_name }}: A new instance of the producer
        """
        client = ServiceBusClient.from_connection_string(conn_str=connection_string, logging_enable=True)
        return cls(client, queue_or_topic_name, content_mode)

