      "metadataPropertyNumber": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/metadataPropertyBase"
          }
        ]
      },
      "metadataPropertyUri": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
