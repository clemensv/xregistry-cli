          "usage": {
            "description": "The interaction model supported by this Endpoint",
            "type": "string",
            "enum": [
              "consumer",
              "producer",
              "subscriber"
            ]
          },
          "config": {
            "$ref": "#/components/schemas/endpointConfig"
